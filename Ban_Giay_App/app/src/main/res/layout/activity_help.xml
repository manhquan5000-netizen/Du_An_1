<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#006C67"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@android:drawable/ic_menu_revert"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"
            app:tint="#FFFFFF"
            android:contentDescription="Quay lại" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Trợ giúp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginStart="16dp" />
    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Câu hỏi thường gặp"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Làm thế nào để đặt hàng?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#006C67"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn có thể đặt hàng bằng cách thêm sản phẩm vào giỏ hàng và tiến hành thanh toán. Sau khi đặt hàng thành công, bạn sẽ nhận được thông báo xác nhận."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. Phương thức thanh toán nào được hỗ trợ?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#006C67"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chúng tôi hỗ trợ nhiều phương thức thanh toán: thẻ tín dụng, thẻ ghi nợ, chuyển khoản ngân hàng, và thanh toán khi nhận hàng (COD)."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. Thời gian giao hàng là bao lâu?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#006C67"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thời gian giao hàng thường từ 3-7 ngày làm việc tùy thuộc vào địa chỉ giao hàng. Bạn có thể theo dõi đơn hàng trong phần &quot;Đơn hàng&quot; của tài khoản."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="4. Làm thế nào để đổi/trả hàng?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#006C67"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn có thể đổi/trả hàng trong vòng 7 ngày kể từ ngày nhận hàng. Vui lòng liên hệ với chúng tôi qua email hoặc hotline để được hỗ trợ."
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5. Làm thế nào để liên hệ hỗ trợ?"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#006C67"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Bạn có thể liên hệ với chúng tôi qua:\n• Email: support@bangiay.com\n• Hotline: 1900-xxxx\n• Hoặc để lại tin nhắn trong ứng dụng"
                android:textSize="14sp"
                android:textColor="#666666"
                android:layout_marginBottom="16dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>


